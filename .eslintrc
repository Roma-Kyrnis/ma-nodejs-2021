{
  "extends": [
      "airbnb-base",
      "prettier",
      "plugin:prettier/recommended"
  ],
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "plugins": [
      "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
      "prettier/prettier": "error",
      "no-console": "off",
      "no-plusplus": [2, { "allowForLoopAfterthoughts": true }]
  }
}
